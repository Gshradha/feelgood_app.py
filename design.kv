 #:kivy 1.11.1

<LandingPage>:
    GridLayout:
        cols:1
        Button:
            text: "Feel Good App" 
            font_size :'35sp'
            background_color:(0,1,1,1) 
            on_press: root.go_to_login()
            
        
          
<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1 
            padding : 20,20
            spacing: 20,20
           
            Label:
                text: "user login"
                font_size :'20sp'
            TextInput:
                id: username
                hint_text: "username"
            TextInput:
                id: password
                password:True
                hint_text: "Password"  
            RelativeLayout:
                Button:
                    text:"Login"
                    background_color:(0,1,1,1)
                    on_press:root.login(root.ids.username.text, root.ids.password.text) 
                    size_hint: 0.3,0.5
                    pos_hint: {'center_x':0.5,'center_y':0.6}
            Label:
                id: login_wrong
                text: ""      
     
        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding:10,10
            spacing: 10,0
            Button:
                text: "Forgot Password" 
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1
            Button:
                text: "Sign up"
                background_color:(0,1,0,1)
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1
                on_press: root.sign_up()


<SignUpScreen>:
    GridLayout:
        cols:1
        padding : 30,30
        spacing: 40,40
        Label:
            text:'sign up screen'
        TextInput:
            id: username
            hint_text :"username"
        TextInput:
            id: password 
            hint_text: "password"

        Button:
            spacing: 20,20
            text:"sumbit" 
            background_color:(0,1,0,1)   
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)   

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:'login successful'
        Button:
            text: 'login page'
            background_color:(1,0,1,1) 
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding:10,10
        spacing:15,15
        background_color:(0,1,1,1)
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source:"logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.35  ,0.35
                pos_hint: {'center_x':0.83 ,'center_y':0.73}
        
        Label:
            text:'How do you feel?'  
        TextInput:
            id: feeling
            hint_text:'Thing to try: Sad, Happy, Motivating, Positive,Funny'
        Button:
            text:"Enlighten me"
            background_color:(0,1,1,1)   
            on_press:root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: " "
                text_size: self.width ,None
                size_hint_y: None
                height: self.texture_size[1]           
        
                     
  
           



<RootWidget>:
    LandingPage:
        name:"landing_page"
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:'sign_up_screen'
    SignUpScreenSuccess:
        name:'sign_up_screen_success'
    LoginScreenSuccess:
        name:'Login_Screen_Success'





